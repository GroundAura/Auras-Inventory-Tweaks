{
"$schema": "https://raw.githubusercontent.com/GroundAura/InventoryInjector/main/docs/InventoryInjector.schema.json",
"rules": [
	{ 
		"match": {
			"formType": "Scroll"
		},
		"assign": {
			"sortByEffectData": "1",
			"itemType": "4",
			"itemClass": "2",
			"itemSort": "0",
			"iconLabel": "default_scroll"
		}
	},
	{
		"match": {
			"formType": "Scroll",
			"school": "Alteration"
		},
		"assign": {
			"itemSort": "1",
			"iconColor": "#8F6B46"
		}
	},
	{
		"match": {
			"formType": "Scroll",
			"school": "Illusion"
		},
		"assign": {
			"itemSort": "2",
			"iconColor": "#4C9EA4"
		}
	},
	{
		"match": {
			"formType": "Scroll",
			"school": "Destruction"
		},
		"assign": {
			"itemSort": "3",
			"iconColor": "#C73636"
		}
	},
	{
		"match": {
			"formType": "Scroll",
			"school": "Conjuration"
		},
		"assign": {
			"itemSort": "4",
			"iconColor": "#993899"
		}
	},
	{
		"match": {
			"formType": "Scroll",
			"school": "Restoration"
		},
		"assign": {
			"itemSort": "5",
			"iconColor": "#00AC00"
		}
	},
	{
		"match": {
			"formType": "Scroll",
			"keywords": [ "OCF_ScrlPowder" ]
		},
		"assign": {
			"itemClass": "1",
			"itemSort": "0",
			"subTypeDisplay": "$ItemScrollPowder",
			"iconLabel": "misc_goldsack",
			"iconColor": "#FFFFFF"
		}
	},
	{
		"match": {
			"formType": "Scroll",
			"keywords": { "anyOf": [ "OCF_ScrlSpider", "IconSpider" ] }
		},
		"assign": {
			"itemClass": "3",
			"itemSort": "0",
			"subTypeDisplay": "$ItemScrollSpider",
			"iconSource": "I4IconAddon/icons.swf",
			"iconLabel": "scroll_spider",
			"iconColor": "#FFFFFF"
		}
	},
	{
		"match": {
			"formType": "Scroll",
			"keywords": [ "OCF_InvColorFire" ]
		},
		"assign": {
			"itemSort": "1",
			"iconColor": "#C73636"
		}
	},
	{
		"match": {
			"formType": "Scroll",
			"keywords": [ "OCF_InvColorFrost" ]
		},
		"assign": {
			"itemSort": "2",
			"iconColor": "#1FFBFF"
		}
	},
	{
		"match": {
			"formType": "Scroll",
			"keywords": [ "OCF_InvColorShock" ]
		},
		"assign": {
			"itemSort": "3",
			"iconColor": "#EAAB00"
		}
	},
	{
		"match": {
			"formType": "Scroll",
			"keywords": [ "OCF_InvColorPoison" ]
		},
		"assign": {
			"itemSort": "4",
			"iconColor": "#62A636"
		}
	},
	{
		"match": {
			"formType": "Scroll",
			"keywords": { "anyOf": [ "BYOHAdoptionToyKeyword", "OCF_MiscChildToy", "OCF_MiscPetGear_Toy", "IconToy" ] }
		},
		"assign": {
			"itemClass": "4",
			"itemSort": "0",
			"subTypeDisplay": "$Toy",
			"iconSource": "I4IconAddon/icons.swf",
			"iconLabel": "misc_toy",
			"iconColor": "#FFFFFF"
		}
	},
	{
		"match": {
			"formType": "Scroll",
			"keywords": [ "OCF_MiscChildToy_Doll" ]
		},
		"assign": {
			"subTypeDisplay": "$ItemMiscDoll",
			"iconSource": "I4IconAddon/icons.swf",
			"iconLabel": "misc_toy",
			"iconColor": "#FFFFFF"
		}
	},
	{
		"match": {
			"formType": "Scroll",
			"keywords": [ "OCF_WeapTypeDart1H" ]
		},
		"assign": {
			"equipType": "1",
			"equipTypeDisplay": "$EqpOneHanded",
			"itemType": "1",
			"itemClass": "1",
			"itemSort": "2",
			"subTypeDisplay": "$ItemAmmoDart",
			"iconLabel": "weapon_bolt",
			"iconColor": "#A4A5BF"
		}
	},
	{
		"match": {
			"formType": "Scroll",
			"keywords": {
				"anyOf": [
					"OCF_WeapTypeKunai1H",
					"WeapTypeKunai"
				]
			}
		},
		"assign": {
			"equipType": "1",
			"equipTypeDisplay": "$EqpOneHanded",
			"itemType": "1",
			"itemClass": "1",
			"itemSort": "2",
			"subTypeDisplay": "$ItemWeaponKunai",
			"iconSource": "AIT/GameIcons/icons.swf",
			"iconLabel": "weapon_kunai",
			"iconColor": "#A4A5BF"
		}
	},
	{
		"match": {
			"formType": "Scroll",
			"keywords": {
				"anyOf": [
					"OCF_WeapTypeShuriken1H",
					"WeapTypeShuriken"
				]
			}
		},
		"assign": {
			"equipType": "1",
			"equipTypeDisplay": "$EqpOneHanded",
			"itemType": "1",
			"itemClass": "1",
			"itemSort": "2",
			"subTypeDisplay": "$ItemWeaponShuriken",
			"iconSource": "AIT/GameIcons/icons.swf",
			"iconLabel": "weapon_shuriken",
			"iconColor": "#A4A5BF"
		}
	}
]
}