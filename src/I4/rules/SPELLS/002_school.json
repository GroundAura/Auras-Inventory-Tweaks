{
	"$schema": "https://raw.githubusercontent.com/GroundAura/InventoryInjector/main/docs/InventoryInjector.schema.json",
	"rules": [
		{
			"match": {
				"formType": "Spell",
				"spellType": {
					"anyOf": [
						"Spell",
						"Power",
						"LesserPower"
					]
				},
				"school": "Alteration",
				"iconColor": null
			},
			"assign": {
				"iconColor": "ColorSpellAlteration"
			}
		},
		{
			"match": {
				"formType": "Spell",
				"spellType": {
					"anyOf": [
						"Spell",
						"Power",
						"LesserPower"
					]
				},
				"school": "Illusion",
				"iconColor": null
			},
			"assign": {
				"iconColor": "ColorSpellIllusion"
			}
		},
		{
			"match": {
				"formType": "Spell",
				"spellType": {
					"anyOf": [
						"Spell",
						"Power",
						"LesserPower"
					]
				},
				"school": "Destruction",
				"iconColor": null
			},
			"assign": {
				"iconColor": "ColorSpellDestruction"
			}
		},
		{
			"match": {
				"formType": "Spell",
				"spellType": {
					"anyOf": [
						"Spell",
						"Power",
						"LesserPower"
