				"iconColor": "ColorSpellConjuration"
			}
		},
		{
			"match": {
				"formType": "Spell",
				"spellType": {
					"anyOf": [
						"Spell",
						"Power",
						"LesserPower"
					]
				},
				"school": "Restoration",
				"iconColor": null
			},
			"assign": {
				"iconColor": "ColorSpellRestoration"
			}
		}
	]
}