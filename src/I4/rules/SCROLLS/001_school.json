{
	"$schema": "https://raw.githubusercontent.com/GroundAura/InventoryInjector/main/docs/InventoryInjector.schema.json",
	"rules": [
		{
			"match": {
				"formType": "Scroll",
				"school": "Alteration"
			},
			"assign": {
				"itemSort": "1",
				"iconColor": "ColorScrollAlteration"
			}
		},
		{
			"match": {
				"formType": "Scroll",
				"school": "Illusion"
			},
			"assign": {
				"itemSort": "2",
				"iconColor": "ColorScrollIllusion"
			}
		},
		{
			"match": {
				"formType": "Scroll",
				"school": "Destruction"
			},
			"assign": {
				"itemSort": "3",
				"iconColor": "ColorScrollDestruction"
			}
		},
		{
			"match": {
				"formType": "Scroll",
				"school": "Conjuration"
			},
			"assign": {
				"itemSort": "4",
				"iconColor": "ColorScrollConjuration"
			}
		},
		{
			"match": {
				"formType": "Scroll",
				"school": "Restoration"
			},
			"assign": {
				"itemSort": "5",
				"iconColor": "ColorScrollRestoration"
			}
		}
	]
}