{
	"$schema": "https://raw.githubusercontent.com/GroundAura/InventoryInjector/main/docs/InventoryInjector.schema.json",
	"rules": [
		{
			"match": {
				"formType": "Weapon",
				"subType": "Melee"
			},
			"assign": {
				"itemClass": "0",
				"itemSort": "1",
				"iconLabel": "clothing_hands"
			}
		},
		{
			"match": {
				"formType": "Weapon",
				"subType": "Dagger"
			},
			"assign": {
				"itemClass": "1",
				"itemSort": "1"
			}
		},
		{
			"match": {
				"formType": "Weapon",
				"subType": "Sword"
			},
			"assign": {
				"itemClass": "1",
				"itemSort": "3"
			}
		},
		{
			"match": {
				"formType": "Weapon",
				"subType": "WarAxe"
			},
			"assign": {
				"itemClass": "1",
				"itemSort": "5"
			}
		},
		{
			"match": {
				"formType": "Weapon",
				"subType": {
					"anyOf": [
						"Pickaxe",
						"WoodAxe"
					]
				}
			},
			"assign": {
				"itemClass": "1",
				"itemSort": "6"
			}
		},
		{
			"match": {
				"formType": "Weapon",
				"subType": "Mace"
			},
			"assign": {
				"itemClass": "1",
				"itemSort": "7"
			}
		},
		{
			"match": {
				"formType": "Weapon",
				"subType": "Greatsword"
			},
			"assign": {
				"itemClass": "2",
				"itemSort": "3"
			}
		},
		{
			"match": {
				"formType": "Weapon",
				"subType": "Battleaxe"
			},
			"assign": {
				"itemClass": "2",
				"itemSort": "5"
			}
		},
		{
			"match": {
				"formType": "Weapon",
				"subType": "Warhammer"
			},
			"assign": {
				"itemClass": "2",
				"itemSort": "7"
			}
		},
		{
			"match": {
				"formType": "Weapon",
				"subType": {
					"anyOf": [
						"Bow",
						"Crossbow"
					]
				}
			},
			"assign": {
				"itemClass": "3",
				"itemSort": "2"
			}
		},
		{
			"match": {
				"formType": "Weapon",
				"subType": "Staff"
			},
			"assign": {
				"itemClass": "5",
				"itemSort": "1"
			}
		},
		{
			"match": {
				"formType": "Weapon",
				"subType": "Staff",
				"isEnchanted": false
			},
			"assign": {
				"subTypeDisplay": "$ItemWeaponStaffUnenchanted"
			}
		}
	]
}